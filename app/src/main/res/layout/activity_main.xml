<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="SpUsage">

    <RadioGroup
        android:id="@+id/cache_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/standard_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:padding="6dp"
            android:text="Standard"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/no_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="No"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/all_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="All"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/error_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Error"
            android:textSize="14dp" />

    </RadioGroup>

    <Button
        android:id="@+id/volley_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/volley_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Header-->
            <TextView
                android:id="@+id/header_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/header_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response:"
                android:textSize="14dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/response_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>